{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FeverTokens Package Ontology Instance",
  "type": "object",
  "required": [
    "name",
    "version",
    "exports",
    "storage",
    "impl"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "exports": {
      "type": "object",
      "properties": {
        "functions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "selector",
              "inputs",
              "outputs"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "selector": {
                "type": "string",
                "pattern": "^0x[0-9a-fA-F]{8}$"
              },
              "inputs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "outputs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "inputs"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "inputs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "structs": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "enums": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "functions"
      ]
    },
    "dependsOn": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "version"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "storage": {
      "type": "object",
      "required": [
        "layout"
      ],
      "properties": {
        "layout": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "slot",
              "type"
            ],
            "properties": {
              "slot": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "impl": {
      "type": "object",
      "required": [
        "facet",
        "bindings",
        "footprints"
      ],
      "properties": {
        "facet": {
          "type": "string"
        },
        "bindings": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "footprints": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "reads": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "writes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}